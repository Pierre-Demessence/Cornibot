{
    "name": "cornibot",
    "version": "0.0.1",
    "description": "A Discord bot in TS",
    "license": "MIT",
    "author": {
        "name": "Pierre Demessence",
        "email": "pierre.demessence@gmail.com"
    },
    "contributors": [
        "Pierre Demessence"
    ],
    "homepage": "https://github.com/Pierre-Demessence/Cornibot",
    "repository": "github/Pierre-Demessence/Cornibot",
    "bugs": {
        "url": "https://github.com/Pierre-Demessence/Cornibot/issues"
    },
    "main": "src/server.js",
    "scripts": {
        "serve": "node --inspect=5858 -r ts-node/register -r pretty-error/start src/server.ts",
        "serve:debug": "node --inspect=5859 -r ts-node/register -r pretty-error/start src/server.ts",
        "serve:watch": "nodemon",
        "serve:prod": "node dist/server.js",
        "build": "tsc",
        "test": "jest",
        "test:coverage": "jest --coverage --watchAll=false",
        "lint": "tsc --noEmit && eslint . --ext .js,.ts --quiet",
        "lint:fix": "npm run lint -- --fix",
        "doc:generate": "typedoc"
    },
    "dependencies": {
        "@typegoose/typegoose": "^7.4.1",
        "canvas": "^2.6.1",
        "canvas-constructor": "^3.2.0",
        "discord.js": "^12.3.1",
        "discord.js-commando": "github:discordjs/Commando",
        "dotenv-safe": "^8.2.0",
        "lodash": "^4.17.20",
        "moment": "^2.29.2",
        "mongodb-memory-server": "^6.9.2",
        "mongoose": "^5.10.9",
        "ms": "^2.1.2",
        "node-fetch": "^2.6.1",
        "reflect-metadata": "^0.1.13",
        "rss-parser": "^3.9.0",
        "sprintf-js": "^1.1.2",
        "sqlite": "^4.0.15",
        "sqlite3": "^5.0.0",
        "string-argv": "^0.3.1",
        "tsyringe": "^4.3.0",
        "winston": "^3.3.3",
        "winston-daily-rotate-file": "^4.5.0"
    },
    "devDependencies": {
        "@types/common-tags": "^1.8.0",
        "@types/jest": "^26.0.14",
        "@types/lodash": "^4.14.161",
        "@types/moment": "^2.13.0",
        "@types/mongodb-memory-server": "^2.3.0",
        "@types/mongoose": "^5.7.36",
        "@types/ms": "^0.7.31",
        "@types/node": "^14.11.8",
        "@types/node-fetch": "^2.5.7",
        "@types/sprintf-js": "^1.1.2",
        "@types/string-argv": "^0.3.0",
        "@types/triple-beam": "^1.3.2",
        "@types/ws": "^7.2.7",
        "@types/xml2js": "^0.4.5",
        "@typescript-eslint/eslint-plugin": "^4.4.0",
        "@typescript-eslint/parser": "^4.4.0",
        "cross-env": "^7.0.2",
        "eslint": "^7.11.0",
        "eslint-config-prettier": "^6.12.0",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^26.5.2",
        "nodemon": "^2.0.4",
        "npm": "^6.14.8",
        "prettier": "^2.1.2",
        "pretty-error": "^2.1.1",
        "source-map-support": "^0.5.19",
        "ts-jest": "^26.4.1",
        "ts-node": "^9.0.0",
        "tslint": "^6.1.3",
        "typedoc": "^0.19.2",
        "typescript": "^4.0.3"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.ts"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": [
            "src/",
            "test/"
        ]
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "delay": 1500,
        "exec": "npm run serve",
        "ext": "ts"
    },
    "prettier": {
        "printWidth": 200,
        "singleQuote": false,
        "tabWidth": 4,
        "useTabs": false,
        "trailingComma": "es5",
        "endOfLine": "auto"
    }
}
